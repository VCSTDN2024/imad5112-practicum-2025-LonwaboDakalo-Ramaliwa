<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewList"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:padding="20dp"
    tools:ignore="ExtraText">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="Welcome To Your Playlist"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/txtTotalSongs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Songs: 0"/>
    <TextView
        android:id="@+id/txtAvgRatings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Avgerage Rating: 0"
        android:layout_marginBottom="10dp"/>

    <ListView
        android:id="@+id/lvRecordedEntries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </ListView>

    <Button
        android:id="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go to Home Page"
        android:layout_marginBottom="15dp"/>


    <Button
        android:id="@+id/btnExit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exit" />

</LinearLayout>